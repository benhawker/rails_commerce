<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <%= render 'layouts/header' %>
  <%= render 'layouts/cart_modal' %>
  <div id="tophead" class="row">
    <div class="col-md-2 col-xs-6">
      <%= link_to image_tag('logo.gif'), root_path %>
    </div>    
    <div class="col-md-3 col-md-offset-1 col-xs-6">
      <div class="lead" id="header-contacts">
        <i class="glyphicon glyphicon-earphone"></i> (063) 415-04-27
      </div>
    </div>

    <div class="col-md-6 col-xs-12">
      <%= render 'layouts/search_form' %>
    </div>
  </div>
      <div class="clearfix visible-xs"></div>
  <%= render 'layouts/second_menu' %>
  <%= render 'layouts/flash' %>
  <%= yield %>
  <%= render 'layouts/footer' %>
  <%= debug(params) if Rails.env.development? %>
</div>


</body>
</html>
