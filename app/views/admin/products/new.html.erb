<h2><%= t('admin.create_product') %></h2>
<%= form_for @product, url: :admin_products do |f| %>
    <%= render 'layouts/validation_errors', model: @product %>
    <%= render 'product_fields', f: f %>

    <div class="form-group">
      <%= f.submit t('admin.create'), class: 'btn btn-primary' %>
      <%= link_to t('admin.cancel'), admin_products_path, class: 'btn btn-default' %>
    </div>
<% end %>