<div id="cart-modal" class="modal fade">
  <div class="modal-dialog">
    <div id="cart-modal-content" class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 id="cart-modal-title" class="modal-title"><%= t('store.your_cart_label') %></h3>
      </div>
      <div class="modal-body">
        <div id="cart-items"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default"><%= t('common.submit') %></button>
      </div>
    </div>
  </div>
</div>