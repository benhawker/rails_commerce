<% provide(:title, "#{t('admin.edit_brand').capitalize} #{@brand.name}") %>
<h2><%= t('admin.edit_brand') %> <%= @brand.name  %></h2>
<%= form_for @brand, url: admin_brand_path(@brand) do |f| %>
    <%= render 'layouts/validation_errors', model: @brand %>
    <%= render 'brand_fields', f: f %>
    <div class="form-group">
      <%= f.submit t('admin.save'), class: 'btn btn-primary' %>
      <%= link_to t('admin.cancel'), admin_brand_path(@brand), class: 'btn btn-default' %>
    </div>
<% end %>