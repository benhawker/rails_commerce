<%= render 'layouts/validation_errors', model: @order_presenter %>
<div class="row">
  <div class="col-md-4">
    <%= form_for @order_presenter, url: orders_path, method: :post do |f| %>
    <div class="row">
      <div class="form-group col-md-6">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control', readonly: !@order_presenter.first_name.blank? %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control', readonly: !@order_presenter.last_name.blank? %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control', readonly: !@order_presenter.email.blank? %>
    </div> 
      <div class="form-group">
        <%= f.label :phone %>
        <%= f.text_field :phone, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :street %>
        <%= f.text_field :street, class: 'form-control' %>
      </div>
    <div class="form-group">
      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :note %>
      <%= f.text_area :note, class: 'form-control' %>
    </div>


      
    <div class="form-group">
      <%= f.submit t('store.submit_order_button_text'), class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
  <div class="col-md-6">
    <div class="order-items">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% @cart.cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.product.name %></td>
            <td><%= number_to_currency cart_item.product.price %></td>
            <td><%= cart_item.quantity %></td>
            <td><%= number_to_currency(cart_item.product.price * cart_item.quantity) %></td>
          </tr>
          <% end %>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td><%= number_to_currency @cart.total_price %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>