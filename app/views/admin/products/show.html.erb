<div class="btn-group">
  <% if @product.previous.blank? %>
    <%= link_to '<i class="glyphicon glyphicon-chevron-left"></i>'.html_safe, '', class: 'btn btn-default disabled' %>
  <% else %>
    <%= link_to '<i class="glyphicon glyphicon-chevron-left"></i>'.html_safe, admin_product_path(@product.previous), class: 'btn btn-default' %>
  <% end %>
  <% if @product.next.blank? %>
    <%= link_to '<i class="glyphicon glyphicon-chevron-right"></i>'.html_safe, '', class: 'btn btn-default disabled' %>
  <% else %>
    <%= link_to '<i class="glyphicon glyphicon-chevron-right"></i>'.html_safe, admin_product_path(@product.next), class: 'btn btn-default' %>
  <% end %>
</div>
<div class="pull-right">
<%= link_to t('admin.clone'), admin_product_clone_path(@product), method: :post, class: 'btn btn-primary' %>
</div>

<%= form_for @product, url: admin_product_path(@product) do |f| %>
    <%= render 'layouts/validation_errors', model: @product %>
    <%= render 'product_fields', f: f %>
    <div class="form-group">
      <%= f.label :images %>
      <div id="admin-images-list" class="row">
        <%= render @product.images %>
      </div>
      <%= render 'admin/images/new_image_form', f: f, imageable_id: @product.id, imageable_type: @product.class.name  %>      
    </div>
    <% if @product.available_attributes %>
      <%= f.fields_for :product_attribute_values, @product.available_attributes do |attribute_values_form| %>
        <%= attribute_values_form.hidden_field :product_attribute_id, value: attribute_values_form.object.product_attribute_id.to_s %>
        <div class="form-group row">
        <div class="col-md-1">
          <%= attribute_values_form.label attribute_values_form.object.name %>
        </div>
        <div class="col-md-2">
          <%= attribute_values_form.text_field :value, class: 'form-control' %>
        </div>
        </div>   
      <% end %>
    <% end %>
    <div class="form-group">
      <%= f.submit t('admin.save'), class: 'btn btn-primary' %>
      <%= link_to t('admin.delete'), admin_product_path(@product), class: 'btn btn-danger', method: :delete, data: {confirm: t('admin.confirm')} %>
    </div>
<% end %>
