<h3><%= @user.full_name %> <%= label_span "Admin", type: 'success' if @user.admin? %> <small><%= mail_to @user.email %></small></h3>
<dl class="dl-horizontal">
  <dt><%= t('user.phone') %></dt><dd><%= number_to_phone @user.phone %></dd>
  <dt><%= t('admin.created_at') %></dt><dd><%= time_tag @user.created_at %></dd>
  <dt><%= t('admin.updated_at') %></dt><dd><%= time_tag @user.updated_at %></dd>
  <dt><%= t('user.sign_in_count') %></dt><dd><%= @user.sign_in_count %></dd>
  <dt><%= t('user.last_sign_in_at') %></dt><dd><%= @user.last_sign_in_at %></dd>
  <dt><%= t('user.last_sign_in_ip') %></dt>
  <dd><%= link_to(@user.last_sign_in_ip,
            "http://www.infobyip.com/ip-#{@user.last_sign_in_ip}.html") if @user.last_sign_in_ip %>
              
  </dd>
</dl>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Order</th>
      <th>Placed at</th>
      <th>Payment status</th>
      <th>Fulfillment status</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% @user.orders.each do |order| %>
      <tr class="order-<%= order.state_name %>" >
        <td><%= link_to "##{order.id}", admin_order_path(order) %></td>
        <td><%= time_tag order.created_at %></td>
        <td>
          <%= label_span order.invoice.human_state_name, type: order.invoice.paid? ? 'default' : 'warning' %>
        </td>
        <td>
          <%= label_span order.shipment.human_state_name, type: order.shipment.shipped? ? 'default' : 'warning' %>
        </td>
        <td><%= number_to_currency order.total_price %></td>
      </tr>
    <% end %>
  </tbody>
</table>