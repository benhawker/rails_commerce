<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control', rows: 12 %>
</div>
<div class="form-group">
  <div class="row">
    <div class="col-md-3">
      <%= f.label :category %>
      <%= select :product, :category_id, @categories.collect { |x| [x.name, x.id] }, {}, {class: 'form-control'} %>
    </div>
    <div class="col-md-3">
      <%= f.label :brand %>
      <%= select :product, :brand_id, @brands.collect { |x| [x.name, x.id] }, {}, {class: 'form-control'} %>
    </div>
    <div class="col-md-2">
      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control' %>
    </div>
  </div>
</div>
<div class="form-group">
  <%= f.label :active %>
  <%= f.check_box :active, data: {
          toggle: 'tooltip',
          placement: 'right'},
                  title: "Control if this product can be viewed in your store"
  %>
</div>